    <script>
        // Скрипт для декодирования base64
        document.addEventListener('DOMContentLoaded', function() {
            var base64ID = "VXNlcjE3OkF1cmVsaWFu";  // base64 строка
            var decoded = atob(base64ID);  // декодирование
            document.getElementById("decodedID").textContent = decoded;  // выводим ID на страницу
        });
